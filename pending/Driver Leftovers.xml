<cleaner id="driver_leftovers" os="windows">
  <label>Driver Leftovers</label>
  <description>Deletes staging folders with driver installer data.</description>
  <option id="nvidia">
    <label>NVIDIA</label>
    <description>Deletes C:\Nvidia [Used for Nvidia Drivers].</description>
    <action search="walk.top" command="delete" path="C:\Nvidia"/>
  </option>
  <option id="amd">
    <label>AMD</label>
    <description>Deletes C:\AMD [used for AMD drivers].</description>
    <action search="walk.top" command="delete" path="C:\AMD"/>
  </option>
</cleaner>
