<cleaner id="xnviewmp">
  <label>XnView MP for Windows</label>
  <description>Picture Viewer</description>
  <option id="customPath">
    <label>Custom Path of XnView MP</label>
    <description>Delete the custom path of XnView MP</description>
        <action command="ini" search="glob" path="$APPDATA\XnViewMP\xnview.ini" name="customPath"/>
  </option>
  <option id="savefolder">
    <label>Save Folder of Viewer</label>
    <description>Delete the Save Folder of Viewer</description>
        <action command="ini" search="glob" path="$APPDATA\XnViewMP\xnview.ini" name="saveFolder"/>
  </option>
  <option id="list_folders">
    <label>List folders of the Strip Maker and Slideshow</label>
    <description>Delete the list folders of the Strip Maker and Slideshow</description>
        <action command="ini" search="glob" path="$APPDATA\XnViewMP\xnview.ini" name="list_folder"/>
  </option>
  <option id="recentfiles">
    <label>Recent Files</label>
    <description>Delete list of recent files</description>
        <action command="ini" search="glob" path="$APPDATA\XnViewMP\xnview.ini" name="RecentFiles"/>
  </option>
  <option id="xnview.db">
    <label>XnView.db (Cache)</label>
    <description>Delete the XnView.db (Cache)</description>
        <action command="delete" search="file" path="$APPDATA\XnViewMP\XnView.db"/>
  </option>
  <option id="thumb.db">
    <label>Thumb.db</label>
    <description>Delete the Thumb.db (Thumb Cache)</description>
        <action command="delete" search="file" path="$APPDATA\XnViewMP\Thumb.db"/>
  </option>
</cleaner>
