<cleaner id="thunderbird_session">
  <label>Thunderbird</label>
  <description>Email client</description>
  <!-- avoid that thunderbird is currently running -->
  <running type="exe" os="linux">thunderbird</running>

  <option id="sessionjson">
  <!-- delete the session.json file in profile directory -->
    <label>Session</label>
    <description>Delete the session (open windows and tabs)</description>
    <action command="delete" search="glob" path="~/.thunderbird/*.default/session.json"/>
  </option>
</cleaner>
