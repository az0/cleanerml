<cleaner id="tor">
  <label>TOR/TOR Browser</label>
  <description>Network layer client</description>
  <var name="torbrowser">
    <value search="glob" os="windows">%UserProfile%\Desktop\Tor Browser\Browser\TorBrowser</value>
    <!--
    Linux $torbrowser not yet figured out! I will do this later! Tobias.
    <value search="glob" os="linux">~/.tor</value>
    <value search="glob" os="linux">/var/lib/tor</value>
    -->
  </var>
  <var name="browser_data">
    <value search="glob" os="windows">$torbrowser\Data\Browser</value>
    <!--
    Linux $browser_data not yet figured out! I will do this later! Tobias.
    <value search="glob" os="linux">~/.tor</value>
    <value search="glob" os="linux">/var/lib/tor</value>
    -->
  </var>
  <var name="tor_data">
    <value search="glob" os="windows">$torbrowser\Data\Tor</value>
    <value search="glob" os="linux">~/.tor</value>
    <value search="glob" os="linux">/var/lib/tor</value>
  </var>
  <option id="cache_tor">
    <label>Cached certs and microdescs</label>
    <description>Delete the cache</description>
    <action search="file" command="delete" path="$tor_data/cached-certs"/>
    <action search="file" command="delete" path="$tor_data/cached-microdesc-consensus"/>
    <action search="file" command="delete" path="$tor_data/cached-microdescs"/>
    <action search="file" command="delete" path="$tor_data/cached-microdescs.new"/>
  </option>
  <option id="state">
    <label>Last state metadata file</label>
    <description>Delete the files</description>
    <action search="file" command="delete" path="$tor_data/state"/>
  </option>
  <option id="cache_browser">
    <label>Cache</label>
    <description>Delete the web cache, which reduces time to display revisited pages</description>
    <action search="file" command="walk.files" path="$browser_data\Caches\profile.default\startupCache\"/>
  </option>
  <option id="cookies">
    <label>Cookies</label>
    <description>Delete cookies, which contain information such as web site preferences, authentication, and tracking identification</description>
    <action command="delete" search="file" path="$browser_data\profile.default\cookies.sqlite"/>
  </option>
  <option id="temp">
    <label>Temporary files</label>
    <description>Delete the temporary files</description>
    <action command="delete" search="walk.files" path="$torbrowser\UpdateInfo\"/>
    <action command="delete" search="glob" path="$torbrowser\UpdateInfo\*"/>
  </option>
  <option id="backup">
    <label>Backup files</label>
    <description>Delete the backup files</description>
    <action search="file" command="walk.files" path="$browser_data\profile.default\bookmarkbackups\"/>
  </option>
</cleaner>
