<cleaner id="mpc-hc" os="windows">
	<label>MPC-HC/MPC-BE (Media Player Classic)</label>
	<description>Media Player</description>
	<option id="history">
		<label>Most recently used (MRU)</label>
		<description>Delete the most recently used (MRU) list</description>
		<action command="delete" search="file" path="$APPDATA\MPC-HC\default.mpcpl"/>
		<action command="winreg" path="HKCU\Software\MPC-HC\MPC-HC\Recent File List" />
		<action command="winreg" path="HKCU\Software\MPC-HC\MPC-HC\Recent Dub List" />
		<action command="winreg" path="HKCU\Software\MPC-BE\Recent File List" />
		<action command="winreg" path="HKCU\Software\MPC-HC\MPC-HC\Settings\LastOpenDir" />
	</option>
	<option id="dmp-files">
		<label>DMP Files</label>
		<description>Delete DMP Files</description>
		<action command="delete" search="file" path="%AppData%\Media Player Classic\*.dmp"/>
		<action command="delete" search="file" path="%AppData%\MPC-*\*.dmp"/>
	</option>
	<option id="dvd-positions">
		<label>DVD Positions</label>
		<description>Delete the DVD Positions</description>
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 0" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 1" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 2" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 3" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 4" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 5" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 6" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 7" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 8" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 9" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 10" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 11" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 12" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 13" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 14" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 15" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 16" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 17" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 18" />
		<action command="winreg" path="HKCU\Software\Gabest\Media Player Classic\Settings\DVD Position 19" />
	</option>
	<option id="file-positions">
		<label>File Positions</label>
		<description>Delete the File Positions</description>
		<action command="winreg" path="HKCU\Software\MPC-HC\MPC-HC\Settings\File Name *" />
		<action command="winreg" path="HKCU\Software\MPC-HC\MPC-HC\Settings\File Position *" />
	</option>
	<option id="snapshotpath">
		<label>Snapshot Path</label>
		<description>Delete the Snapshot Path</description>
		<action command="winreg" path="HKCU\Software\MPC-HC\MPC-HC\Settings\SnapshotPath" />
	</option>
</cleaner>
