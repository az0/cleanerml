<cleaner id="atom">
  <label>Atom</label>
  <running type="exe" os="windows">TeraCopyService.exe</running>
  <running type="exe" os="linux">TeraCopyService</running>
  <description>Copy/paste tool</description>
  <option id="history">
    <label>History</label>
    <description>Clears copy history.</description>
    <action search="walk.all" command="truncate" path="%appdata%/TeraCopy/history"/>
  </option>
</cleaner>
