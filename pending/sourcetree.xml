<cleaner id="sourcetree" os="windows">
  <label>SourceTree</label>
  <description>Source Control Management</description>
  <option id="logs">
    <label>Logs</label>
    <description>Delete the logs (keep latest log)</description>
    <!-- This application used in software development so deleting all logs is a bad idea -->
    <action command="delete" search="walk.all" path="$LOCALAPPDATA\Atlassian\SourceTree\" regex="\w+\.log(\.\d+)$"/>
  </option>
  <option id="cache">
    <label>Cache</label>
    <description>Delete the cache</description>
    <action search="walk.all" command="delete" path="$LOCALAPPDATA\Atlassian\SourceTree\cache"/>
  </option>
</cleaner>
