<cleaner id="bitwarden">
  <label>Bitwarden</label>
  <running type="exe" os="windows">bitwarden.exe</running>
  <running type="exe" os="linux">bitwarden</running>
  <description>Password manager</description>
  <option id="cache">
    <label>Cache</label>
    <description>Clears the cache.</description>
    <action search="walk.files" command="delete" path="%appdata%/Bitwarden/Cache"/>
    <action search="walk.files" command="delete" path="%appdata%/Bitwarden/GPUCache"/>
  </option>
  <option id="app.log">
    <label>app.log</label>
    <description>Deletes app.log</description>
    <action search="file" command="truncate" path="%appdata%/Bitwarden/app.log"/>
  </option>
  <option id="cookies">
    <label>Cookies</label>
    <description>Clears the cookies.</description>
    <action search="file" command="truncate" path="%appdata%/Bitwarden/Cookies"/>
  </option>
</cleaner>
