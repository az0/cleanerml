<cleaner id="tomtom" os="windows">
  <label>TomTom</label>
  <description>Navigation system</description>
  <option id="cookies">
    <label>Cookies</label>
    <description>Delete the cookies</description>
    <action command="delete" search="glob" path="$USERPROFILE\AppData\Roaming\TomTom\HOME\Profiles\*.default\cookies.sqlite"/>
  </option>
  <option id="history">
    <label>History</label>
    <description>Delete the history</description>
    <action command="delete" search="glob" path="$USERPROFILE\AppData\Roaming\TomTom\HOME\Profiles\*.default\places.sqlite"/>
  </option>
</cleaner>
