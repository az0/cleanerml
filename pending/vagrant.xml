<cleaner id="vagrant" os="windows">
  <label>Vagrant</label>
  <description>VM configurator</description>
  <option id="boxes">
    <label>Boxes</label>
    <description>Delete cached boxes</description>
    <action command="delete" search="walk.all" path="$USERPROFILE\.Vagrant.d\boxes"/>
  </option>
