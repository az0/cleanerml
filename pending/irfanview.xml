<cleaner id="irfanview">
  <label>IrfanView</label>
  <description>Picture Viewer</description>
  <option id="opendir">
    <label>Open Directory</label>
    <description>Directory shown in the open dialog</description>
        <action command="ini" search="glob" path="%AppData%\IrfanView\i_view32.ini" name="OpenDir"/>
        <action command="ini" search="glob" path="%AppData%\IrfanView\i_view64.ini" name="OpenDir"/>
  </option>
  <option id="mrud">
    <label>Most recent used directory Thumbnails</label>
    <description>Most recent used directory (MRUD) - Thumbnails</description>
        <action command="ini" search="glob" path="%AppData%\IrfanView\i_view32.ini" name="MRUD*"/>
        <action command="ini" search="glob" path="%AppData%\IrfanView\i_view64.ini" name="MRUD*"/>
  </option>
  <option id="mrud_savedir">
    <label>Most recent used save directories</label>
    <description>Most recent used directory (MRUD) - Save Directories</description>
        <action command="ini" search="glob" path="%AppData%\IrfanView\i_view32.ini" name="SaveDir*"/>
        <action command="ini" search="glob" path="%AppData%\IrfanView\i_view64.ini" name="SaveDir*"/>
  </option>
  <option id="recentfiles">
    <label>Most recent used files</label>
    <description>Most recent used files (MRU Files)</description>
        <action command="ini" search="glob" path="%AppData%\IrfanView\i_view32.ini" name="File*"/>
        <action command="ini" search="glob" path="%AppData%\IrfanView\i_view64.ini" name="File*"/>
  </option>
  <option id="savedir">
    <label>Save Directory</label>
    <description>Directory shown in the save dialog</description>
        <action command="ini" search="glob" path="%AppData%\IrfanView\i_view32.ini" name="SaveDir"/>
        <action command="ini" search="glob" path="%AppData%\IrfanView\i_view64.ini" name="SaveDir"/>
  </option>
</cleaner>
