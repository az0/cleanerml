<cleaner id="xnview">
  <label>XnView Classic for Windows</label>
  <description>Picture Viewer</description>
  <option id="mru_files">
    <label>MRU Files</label>
    <description>Delete list of MRU Files</description>
    <action command="ini" search="deep" path="FileName_0="/>
    <action command="ini" search="deep" path="FileName_1="/>
    <action command="ini" search="deep" path="FileName_2="/>
    <action command="ini" search="deep" path="FileName_3="/>
    <action command="ini" search="deep" path="FileName_4="/>
    <action command="ini" search="deep" path="FileName_5="/>
    <action command="ini" search="deep" path="FileName_6="/>
    <action command="ini" search="deep" path="FileName_7="/>
    <action command="ini" search="deep" path="FileName_8="/>
    <action command="ini" search="deep" path="FileName_9="/>
    <action command="ini" search="deep" path="DirName_0="/>
    <action command="ini" search="deep" path="DirName_1="/>
    <action command="ini" search="deep" path="DirName_2="/>
    <action command="ini" search="deep" path="DirName_3="/>
    <action command="ini" search="deep" path="DirName_4="/>
    <action command="ini" search="deep" path="DirName_5="/>
    <action command="ini" search="deep" path="DirName_6="/>
    <action command="ini" search="deep" path="DirName_7="/>
    <action command="ini" search="deep" path="DirName_8="/>
    <action command="ini" search="deep" path="DirName_9="/>
  </option>
  <option id="cache">
    <label>Cache files</label>
    <description>Delete the cache files</description>
        <action command="delete" search="file" path="$APPDATA\XnView\XnView.db"/>
        <action command="delete" search="glob" path="%LocalAppData%\VirtualStore\Program Files*\XnView\cache\*.db"/>
        <action command="delete" search="glob" path="%ProgramFiles%\XnView\cache\*.db"/>
  </option>
  <option id="category_bak">
    <label>Category Backup</label>
    <description>Delete the Category Backups</description>
        <action command="delete" search="file" path="$APPDATA\XnView\category.bak"/>
        <action command="delete" search="file" path="%LocalAppData%\VirtualStore\Program Files*\XnView\category.bak"/>
        <action command="delete" search="file" path="%ProgramFiles%\XnView\category.bak"/>
  </option>
</cleaner>
