<cleaner id="acdsee_pro" os="windows">
  <label>ACDSee Pro</label>
  <description>Image Viewer</description>
  <option id="cache">
    <label>Cache</label>
    <description>Delete the cache</description>
    <action search="walk.files" command="delete" path="$LOCALAPPDATA\ACD Systems\Catalogs\*Pro\Default"/>
    <action search="walk.files" command="delete" path="$LOCALAPPDATA\ACD Systems\ICMCache"/>
    <action search="walk.files" command="delete" path="$LOCALAPPDATA\ACD Systems\SavedSearches"/>
  </option>
</cleaner>
