<cleaner id="xed">
  <label>xed</label>
  <description>xed text editor</description>
  <option id="history">
    <label>History</label>
    <description>Delete recent search and replace history</description>
    <!-- Clean history using dconf -->
    <action command="process" cmd="dconf reset /org/x/editor/state/history-entry/history-search-for"/>
    <action command="process" cmd="dconf reset /org/x/editor/state/history-entry/history-replace-with"/>
  </option>
</cleaner>
