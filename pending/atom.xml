<cleaner id="atom">
  <label>Atom</label>
  <running type="exe" os="windows">atom.exe</running>
  <running type="exe" os="linux">atom</running>
  <description>Text editor</description>
  <option id="cache">
    <label>Cache</label>
    <description>Clears the cache.</description>
    <action search="walk.files" command="delete" path="%appdata%/Atom/Cache"/>
    <action search="walk.files" command="delete" path="%appdata%/Atom/GPUCache"/>
  </option>
  <option id="indexeddb">
    <label>IndexedDB</label>
    <description>Clears the IndexedDB folder.</description>
    <action search="walk.all" command="truncate" path="%appdata%/Atom/IndexedDB"/>
  </option>
  <option id="logs">
    <label>Logs</label>
    <description>Clears the logs folder.</description>
    <action search="walk.all" command="truncate" path="%appdata%/Atom/logs"/>
  </option>
  <option id="cookies">
    <label>Logs</label>
    <description>Clears the cookies.</description>
    <action search="file" command="truncate" path="%appdata%/Atom/Cookies"/>
  </option>
</cleaner>
