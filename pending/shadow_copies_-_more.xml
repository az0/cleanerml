<cleaner id="shadow_copies_more" os="windows">
  <label translate="true">Shadow Copies - More</label>
  <description>Deletes the Shadow Copies of all drives from C to Z</description>
  <option id="shadow_copies_all">
    <label>Shadow Copies - Delete all</label>
    <description>Deletes the Shadow Copies of all drives from C to Z</description>
    <warning>Use this cleaner only if you know what you do!</warning>
    <action command="process" cmd="vssadmin.exe delete shadows /for=C: /all"/>
    <action command="process" cmd="vssadmin.exe delete shadows /for=D: /all"/>
