<cleaner id="ccache" os="linux">
  <!-- FIXME: Does it work under Windows? -->
  <label>ccache</label>
  <description>Cache result of files compiled by C/C++ compilers</description>

  <option id="ccache">
    <label>Delete ccache's files</label>
    <description>Delete cached files created by ccache</description>
    <action search="walk.all" command="delete" path="~/.ccache/"/>
  </option>
</cleaner>
