<cleaner id="virtualbox" os="windows">
  <label>VirtualBox</label>
  <description>Virtual machine</description>
  <option id="logs">
    <label>Logs</label>
    <description>Delete the logs (keep latest log)</description>
	<!-- Virtualbox is heavily used in software development so deleting all logs is a bad idea -->
    <action command="delete" search="walk.all" path="$USERPROFILE\.VirtualBox\" regex="\w+\.log(\.\d+)$"/>
  </option>
  <!--
  <option id="vm-logs">
    <label>VM Logs</label>
    <description>Delete the logs of all VMs (keep latest log)</description>
	<warning>This option is slow.</warning>
    <action command="delete" search="deep" cache="false" regex="^VBox\.log(\.\d+)$"/>
    <action command="delete" search="deep" cache="false" regex="^VBoxStartup\.log$"/>
  </option>
  -->
</cleaner>
