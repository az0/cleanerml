<cleaner id="geany">
  <label>Geany</label>
  <description>Geany text editor</description>
  <option id="history">
    <label>History</label>
    <description>Delete recent file history</description>
    <!-- Clean ini section for recent files in ~/.config/geany/geany.conf -->
    <action command="ini" search="file" path="$XDG_CONFIG_HOME/geany/geany.conf" section="files"/>
  </option>
</cleaner>
