<cleaner id="ruby" os="windows">
  <label>Ruby</label>
  <description>Programming Language</description>
  <option id="cache_gems">
    <label>Gems</label>
    <description>Delete cached gems</description>
    <action command="delete" search="walk.all" path="$SYSTEMDRIVE\Ruby*\lib\ruby\gems\*\cache"/>
  </option>
  <option id="cache_indexes">
    <label>Remote Index Cache</label>
    <description>Delete the Remote Index Cache</description>
    <action command="delete" search="walk.all" path="$USERPROFILE\.gem\specs"/>
  </option>
</cleaner>
