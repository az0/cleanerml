<cleaner id="shotwell">
  <label>Shotwell</label>
  <description>Shotwell Photo Manager</description>
  <option id="delete_database">
    <label>Database</label>
    <description>Delete Shotwell's picture database</description>
    <action search="glob" command="delete" path="~/.shotwell/data/*"/>
  </option>
  <option id="delete_thumbs">
    <label>Thumbnails</label>
    <description>Delete picture thumbnails generated by Shotwell</description>
    <action search="glob" command="delete" path="~/.shotwell/thumbs/*"/>
  </option>
  <option id="delete_wallpapers">
    <label>Wallpapers</label>
    <description>Delete wallpaper files generated by shotwell</description>
    <action search="glob" command="delete" path="~/.shotwell/wallpaper/*"/>
  </option>
</cleaner>
