<cleaner id="audacity">
  <label>Audacity</label>
  <description>fast, cross-platform audio editor</description>
  <option id="autosave">
    <label>Autosaved files</label>
    <description>Autosaved files for session restoration</description>
    <action search="walk.files" command="delete" path="~/.audacity-data/autosave/"/>
    <action search="walk.files" command="delete" path="$APPDATA\Audacity\AutoSave\*.autosave"/>
  </option>
</cleaner>
